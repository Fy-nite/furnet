@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@if (ViewData["IsTestingMode"] as bool? == true)
{
    <div class="alert alert-info shadow-lg" role="alert">
        <i class="bi bi-info-circle"></i>
        <strong>Development Mode:</strong> Running in testing/debug mode with enhanced logging and demo data.
    </div>
}

<div class="hero-section text-center py-5 mb-5 rounded-4 position-relative overflow-hidden">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3">
            <span class="bg-white bg-opacity-10 rounded-4 px-4 py-2 d-inline-block shadow-sm">
                <i class="bi bi-box-seam text-primary"></i> Purr
            </span>
        </h1>
        <p class="lead mb-4">Purr - A Purrfict community-driven package manager</p>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="input-group input-group-lg mb-3 shadow-sm">
                    <input type="text" class="form-control" placeholder="Search for packages..." id="heroSearch">
                    <button class="btn btn-primary px-4" type="button">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="/Packages/Browse" class="btn btn-outline-primary px-4 py-2 shadow-sm">Browse Packages</a>
            <a href="/Packages/Submit" class="btn btn-primary px-4 py-2 shadow-sm">Submit Package</a>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow rounded-4 mb-4">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-center">
                        <i class="bi bi-trophy text-warning"></i> Top 5 Downloaded Packages
                    </h3>
                    @if (Model.TopDownloadedPackages != null && Model.TopDownloadedPackages.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var pkg in Model.TopDownloadedPackages)
                            {
                                <li class="list-group-item bg-transparent d-flex align-items-center justify-content-between rounded-4 mb-2 px-3 py-2 shadow-sm">
                                    <div>
                                        <a href="/Packages/Details/@pkg.Name" class="fw-semibold text-primary">@pkg.Name</a>
                                        <span class="badge bg-secondary ms-2">@pkg.Version</span>
                                        <div class="small text-muted">@pkg.Description</div>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-primary bg-opacity-75 fs-6"><i class="bi bi-download"></i> @pkg.Downloads.ToString("N0")</span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-muted text-center">No packages found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow rounded-4">
                <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width:80px;height:80px;">
                        <i class="bi bi-download display-5 text-primary"></i>
                    </div>
                    <h5 class="card-title mt-2">Easy Installation</h5>
                    <p class="card-text">Install packages with simple commands using the Purr package manager.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow rounded-4">
                <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width:80px;height:80px;">
                        <i class="bi bi-people display-5 text-primary"></i>
                    </div>
                    <h5 class="card-title mt-2">Community Driven</h5>
                    <p class="card-text">Built by the community, for the community. Share your packages with everyone.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow rounded-4">
                <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width:80px;height:80px;">
                        <i class="bi bi-shield-check display-5 text-primary"></i>
                    </div>
                    <h5 class="card-title mt-2">Secure & Reliable</h5>
                    <p class="card-text">All packages are reviewed and maintained by trusted community members.</p>
                </div>
            </div>
        </div>
    </div>
</div>
