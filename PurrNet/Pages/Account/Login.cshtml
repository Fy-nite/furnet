@page
@model Purrnet.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3><i class="bi bi-box-seam text-primary"></i> PurrNet</h3>
                    <p class="text-muted mb-0">Sign in to your account</p>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-github display-1 text-primary mb-4"></i>
                    <h5 class="mb-3">Continue with GitHub</h5>
                    <p class="text-muted mb-4">
                        Use your GitHub account to sign in and manage your packages on PurrNet.
                    </p>
                    
                    <form method="post">
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-github"></i> Sign in with GitHub
                        </button>
                    </form>
                    
                    <div class="mt-4">
                        <small class="text-muted">
                            Don't have a GitHub account? 
                            <a href="https://github.com/join" target="_blank" class="text-decoration-none">
                                Create one here <i class="bi bi-box-arrow-up-right"></i>
                            </a>
                        </small>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">
                        By signing in, you agree to our 
                        <a href="/Privacy" class="text-decoration-none">Privacy Policy</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
