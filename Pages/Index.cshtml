@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@if (ViewData["IsTestingMode"] as bool? == true)
{
    <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle"></i>
        <strong>Development Mode:</strong> Running in testing/debug mode with enhanced logging and demo data.
    </div>
}

<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3">
            <i class="bi bi-box-seam text-primary"></i> FUR
        </h1>
        <p class="lead mb-4">Finite User Repository - A community-driven package manager</p>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="input-group input-group-lg mb-3">
                    <input type="text" class="form-control" placeholder="Search for packages..." id="heroSearch">
                    <button class="btn btn-primary" type="button">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center gap-3">
            <a href="/Packages/Browse" class="btn btn-outline-primary">Browse Packages</a>
            <a href="/Packages/Submit" class="btn btn-primary">Submit Package</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-download display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Easy Installation</h5>
                    <p class="card-text">Install packages with simple commands using the fur package manager.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Community Driven</h5>
                    <p class="card-text">Built by the community, for the community. Share your packages with everyone.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-shield-check display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Secure & Reliable</h5>
                    <p class="card-text">All packages are reviewed and maintained by trusted community members.</p>
                </div>
            </div>
        </div>
    </div>
</div>
