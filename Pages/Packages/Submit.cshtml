@page
@model furnet.Pages.Packages.SubmitModel
@{
    ViewData["Title"] = "Submit Package";
}

<h1><i class="bi bi-plus-circle"></i> Submit New Package</h1>
<p class="text-muted mb-4">Share your package with the FUR community</p>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")" role="alert">
        <i class="bi @(Model.IsSuccess ? "bi-check-circle" : "bi-exclamation-triangle")"></i> @Model.Message
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Package Information (furconfig.json)</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="PackageName" class="form-label"></label>
                            <input asp-for="PackageName" class="form-control" placeholder="my-awesome-package">
                            <span asp-validation-for="PackageName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Version" class="form-label"></label>
                            <input asp-for="Version" class="form-control" placeholder="1.0.0">
                            <span asp-validation-for="Version" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Authors" class="form-label"></label>
                        <input asp-for="Authors" class="form-control" placeholder="Author One, Author Two">
                        <div class="form-text">Separate multiple authors with commas</div>
                        <span asp-validation-for="Authors" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Git" class="form-label"></label>
                        <input asp-for="Git" class="form-control" type="url" placeholder="https://git.example.com/user/repo.git">
                        <span asp-validation-for="Git" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Homepage" class="form-label"></label>
                            <input asp-for="Homepage" class="form-control" type="url" placeholder="https://example.com">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="IssueTracker" class="form-label"></label>
                            <input asp-for="IssueTracker" class="form-control" type="url" placeholder="https://github.com/user/repo/issues">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Installer" class="form-label"></label>
                        <input asp-for="Installer" class="form-control" placeholder="install.sh">
                        <div class="form-text">Script that runs during installation (optional)</div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Dependencies" class="form-label"></label>
                        <input asp-for="Dependencies" class="form-control" placeholder="make@latest, gcc@1.0.0">
                        <div class="form-text">Format: package@version, separate with commas</div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Submit Package
                    </button>
                    <a href="/Packages/Browse" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Required Fields</h6>
            </div>
            <div class="card-body">
                <ul class="small">
                    <li><strong>Name:</strong> No spaces allowed</li>
                    <li><strong>Version:</strong> x.y.z format required</li>
                    <li><strong>Authors:</strong> At least one author required</li>
                    <li><strong>Git:</strong> Repository URL for package download</li>
                </ul>
                <p class="small mt-3 mb-0">All other fields are optional but recommended.</p>
            </div>
        </div>
    </div>
</div>
