@page
@model furnet.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logging out...";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card">
                <div class="card-body">
                    <i class="bi bi-arrow-repeat spin display-4 text-primary mb-3"></i>
                    <h4>Logging you out...</h4>
                    <p class="text-muted">Please wait while we sign you out securely.</p>
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.spin {
    animation: spin 1s linear infinite;
}


</style>

<script>
// Auto-redirect if this page loads (shouldn't normally happen since LogoutModel redirects)
setTimeout(function() {
    window.location.href = '/';
}, 3000);
</script>
