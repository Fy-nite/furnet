<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FurNet</title>
    
    <!-- Standard meta tags -->
    <meta name="description" content="@(ViewData["MetaDescription"] ?? "FurNet - Community-driven package repository for FUR (Finite User Repository)")" />
    <meta name="keywords" content="@(ViewData["MetaKeywords"] ?? "fur, package manager, repository, development tools")" />
    <meta name="author" content="@(ViewData["MetaAuthors"] ?? "FurNet Community")" />
    
    <!-- Open Graph defaults -->
    <meta property="og:site_name" content="FurNet - Finite User Repository" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@(ViewData["MetaTitle"] ?? ViewData["Title"])" />
    <meta property="og:description" content="@(ViewData["MetaDescription"] ?? "Community-driven package repository for FUR")" />
    @if (ViewData["MetaUrl"] != null)
    {
        <meta property="og:url" content="@ViewData["MetaUrl"]" />
    }
    @if (ViewData["MetaImage"] != null)
    {
        <meta property="og:image" content="@ViewData["MetaImage"]" />
    }
    
    <!-- Twitter Card defaults -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="@(ViewData["MetaTitle"] ?? ViewData["Title"])" />
    <meta name="twitter:description" content="@(ViewData["MetaDescription"] ?? "Community-driven package repository for FUR")" />
    @if (ViewData["MetaImage"] != null)
    {
        <meta name="twitter:image" content="@ViewData["MetaImage"]" />
    }
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/furnet.styles.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    @inject furnet.Services.TestingModeService TestingModeService
    
    @if (TestingModeService.IsTestingMode)
    {
        <div class="alert alert-warning alert-dismissible mb-0 text-center" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Testing Mode Active</strong> - This is a development/testing environment
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-box-seam"></i> FurNet
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Packages/Browse">Browse</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Packages/Submit">Submit</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Account/Profile"><i class="bi bi-person"></i> My Profile</a></li>
                                    @if (User.HasClaim("IsAdmin", "True"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Index"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Packages"><i class="bi bi-box-seam"></i> Manage Packages</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Analytics"><i class="bi bi-graph-up"></i> Analytics</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-page="/Account/Logout" method="post" class="d-inline">
                                            <input name="__RequestVerificationToken" type="hidden" value="@Html.AntiForgeryToken().ToString()">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">
                                    <i class="bi bi-github"></i> Login with GitHub
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FurNet - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>