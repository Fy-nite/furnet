@page
@model AboutModel
@{
    ViewData["Title"] = "About PurrNet";
    ViewData["MetaDescription"] = "Learn about PurrNet - the community-driven package repository for Purr . Discover our mission, features, and how to get involved.";
    ViewData["MetaKeywords"] = "about, Purrnet, Purr, package manager, repository, community, open source";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1><i class="bi bi-info-circle"></i> About PurrNet</h1>
            <p class="lead">The community-driven package repository for Purr </p>

            <section class="mb-5">
                <h2>What is PurrNet?</h2>
                <p>
                    PurrNet is a modern, web-based package repository designed to serve the Purr
                    package manager ecosystem. We provide a centralized platform where developers can share, discover, 
                    and manage packages for their projects.
                </p>
                <p>
                    Built with community collaboration in mind, PurrNet makes it easy to publish your packages and 
                    discover useful tools created by other developers in the Purr ecosystem.
                </p>
            </section>

            <section class="mb-5">
                <h2>Our Mission</h2>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-people text-primary"></i> Community First</h5>
                                <p class="card-text">Foster a welcoming and inclusive community where developers can collaborate and share their work.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-shield-check text-primary"></i> Quality & Security</h5>
                                <p class="card-text">Maintain high standards for package quality and security through community review and moderation.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-lightning text-primary"></i> Simplicity</h5>
                                <p class="card-text">Make package management simple and intuitive for both package authors and consumers.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-code-square text-primary"></i> Open Source</h5>
                                <p class="card-text">Remain fully open source and transparent in our development and operations.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="mb-5">
                <h2>Key Features</h2>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="bi bi-check-circle text-success"></i> <strong>Easy Package Submission:</strong> Simple web interface for publishing packages</li>
                    <li class="mb-2"><i class="bi bi-check-circle text-success"></i> <strong>Powerful Search:</strong> Find packages by name, keywords, or author</li>
                    <li class="mb-2"><i class="bi bi-check-circle text-success"></i> <strong>GitHub Integration:</strong> Seamless authentication with GitHub</li>
                    <li class="mb-2"><i class="bi bi-check-circle text-success"></i> <strong>Package Analytics:</strong> Track downloads and usage statistics</li>
                    <li class="mb-2"><i class="bi bi-check-circle text-success"></i> <strong>RESTful API:</strong> Complete API for package manager integration</li>
                    <li class="mb-2"><i class="bi bi-check-circle text-success"></i> <strong>Social Sharing:</strong> Rich metadata for sharing packages on social media</li>
                </ul>
            </section>

            <section class="mb-5">
                <h2>Technology Stack</h2>
                <div class="row">
                    <div class="col-md-6">
                        <h5>Backend</h5>
                        <ul>
                            <li>ASP.NET Core 8.0</li>
                            <li>Entity Framework Core</li>
                            <li>SQLite Database</li>
                            <li>GitHub OAuth Authentication</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h5>Frontend</h5>
                        <ul>
                            <li>Razor Pages</li>
                            <li>Bootstrap 5</li>
                            <li>Bootstrap Icons</li>
                            <li>Responsive Design</li>
                        </ul>
                    </div>
                </div>
            </section>

            <section class="mb-5">
                <h2>Getting Started</h2>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="bi bi-person-plus display-4 text-primary mb-2"></i>
                            <h5>1. Sign Up</h5>
                            <p class="small">Create an account using your GitHub credentials</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="bi bi-upload display-4 text-primary mb-2"></i>
                            <h5>2. Submit Package</h5>
                            <p class="small">Upload your Purrconfig.json and package details</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="bi bi-share display-4 text-primary mb-2"></i>
                            <h5>3. Share & Discover</h5>
                            <p class="small">Share your packages and discover others</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-envelope"></i> Contact Us</h5>
                </div>
                <div class="card-body">
                    <h6>Project Information</h6>
                    <ul class="list-unstyled small">
                        <li><strong>Project:</strong> PurrNet</li>
                        <li><strong>License:</strong> Open Source</li>
                        <li><strong>Repository:</strong> <a href="https://github.com/fy-nite/Purrnet" target="_blank">GitHub</a></li>
                    </ul>
                    
                    <h6 class="mt-3">Get Help</h6>
                    <div class="d-grid gap-2">
                        <a href="https://github.com/fy-nite/Purrnet/issues" target="_blank" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-bug"></i> Report Issues
                        </a>
                        <a href="https://github.com/fy-nite/Purrnet/discussions" target="_blank" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-chat-dots"></i> Discussions
                        </a>
                        <a href="https://github.com/fy-nite/Purrnet/wiki" target="_blank" class="btn btn-outline-info btn-sm">
                            <i class="bi bi-book"></i> Documentation
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Community</h5>
                </div>
                <div class="card-body">
                    <p class="small">Join our growing community of developers:</p>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-github"></i> <a href="https://github.com/fy-nite/Purrnet" target="_blank">GitHub Organization</a></li>
                        <li><i class="bi bi-discord"></i> <a href="#" target="_blank">Discord Server</a> <small class="text-muted">(Coming Soon)</small></li>
                        <li><i class="bi bi-twitter"></i> <a href="#" target="_blank">Twitter</a> <small class="text-muted">(Coming Soon)</small></li>
                    </ul>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-code-slash"></i> Contribute</h5>
                </div>
                <div class="card-body">
                    <p class="small">Help make PurrNet better:</p>
                    <ul class="list-unstyled small">
                        <li>üêõ Report bugs and issues</li>
                        <li>üí° Suggest new features</li>
                        <li>üìñ Improve documentation</li>
                        <li>üîß Submit pull requests</li>
                        <li>‚≠ê Star the repository</li>
                    </ul>
                    <a href="https://github.com/fy-nite/Purrnet/blob/main/CONTRIBUTING.md" target="_blank" class="btn btn-primary btn-sm">
                        <i class="bi bi-heart"></i> Contributing Guide
                    </a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">
    
    <div class="row">
        <div class="col-12">
            <div class="text-center">
                <h3>Ready to Get Started?</h3>
                <p class="text-muted">Join the PurrNet community and start sharing your packages today!</p>
                <div class="d-flex justify-content-center gap-3">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a href="/Packages/Submit" class="btn btn-primary">
                            <i class="bi bi-upload"></i> Submit Your First Package
                        </a>
                        <a href="/Packages/Browse" class="btn btn-outline-secondary">
                            <i class="bi bi-search"></i> Browse Packages
                        </a>
                    }
                    else
                    {
                        <a href="/Account/Login" class="btn btn-primary">
                            <i class="bi bi-github"></i> Sign Up with GitHub
                        </a>
                        <a href="/Packages/Browse" class="btn btn-outline-secondary">
                            <i class="bi bi-search"></i> Browse Packages
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
